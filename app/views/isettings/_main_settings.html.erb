function set_settings_value(obj){
  var senddata = {};
  var key = $(obj).attr('id');
  senddata[key] = $(obj).val();
  $.post("access_tickets_isettings/set_settings_value", senddata, function( data ) {
    }, "json");
}

$( document ).ready(function() {
  $('div#settings input[type="submit"]').hide();
});
